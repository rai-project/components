{
	"extends": [
		"google",
		"plugin:flowtype/recommended",
		"plugin:react/recommended",
		"prettier",
		"prettier/flowtype",
		"prettier/react"
	],
	"plugins": ["flowtype", "babel", "react", "prettier"],
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 2016,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true,
			"generators": true,
			"experimentalObjectRestSpread": true
		}
	},
	"env": {
		"es6": true,
		"node": true
	},
	"rules": {
		"prettier/prettier": "error",
		"require-jsdoc": "off",
		"no-undef": "off",
		"no-confusing-arrow": "error",
		"no-invalid-this": 0
	}
}
